<!-- views/pages/organizer/volunteer-history.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Volunteer History</title>
    <link rel="stylesheet" href="/css/history.css">
</head>
<body>
  <div class="container">
      <h1>Your Volunteer History</h1>
      <table id="volunteer-history">
          <thead>
              <tr>
                  <th>Event Name</th>
                  <th>Date</th>
                  <th>Required Skills</th>
                  <th>Urgency</th>
                  <th>Location</th>
                  <th>Status</th>
              </tr>
          </thead>
          <tbody>
              <% events.forEach(function(event) { %>
              <tr>
                  <td><%= event.eventName %></td>
                  <td><%= event.date %></td>
                  <td><%= event.requiredSkills %></td>
                  <td><%= event.urgency %></td>
                  <td><%= event.location %></td>
                  <td class="<%= event.status.toLowerCase().replace(' ', '-') %>"><%= event.status %></td>
              </tr>
              <% }) %>
          </tbody>
      </table>
      <!-- Home Button -->
      <a id="home-page" href="/">Go Home</a>
  </div>
</body>
</html>
