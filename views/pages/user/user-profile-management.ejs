<!-- views/pages/user/user-profile-management.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>Update your profile</title>
  <link rel="stylesheet" href="/css/example.css">
  <script src="/js/userprefs-manage-skills.js"></script>
  <script src="/js/userprefs-manage-availability.js"></script>
</head>
<body>
  <!-- Include the navigation bar -->
  <%- include('../../components/navbar', { session: session }) %>

  <div class="center">
    <article>
      <h1>Update your profile</h1>
      <!-- Personal info -->
      <div class="panelblock">
        <form method="post">
          <h2>Personal information</h2>
          <label for="fullName">Full name</label>
          <input type="text" id="fullName" name="fullName" maxlength="50" value="<%= profile.full_name %>" required>
          <br>

          <label for="address1">Address 1</label>
          <input type="text" id="address1" name="address1" maxlength="100" value="<%= profile.address1 %>" required>
          <br>

          <label for="address2">Address 2</label>
          <input type="text" id="address2" name="address2" maxlength="100" value="<%= profile.address2 %>">
          <br>

          <label for="city">City</label>
          <input type="text" id="city" name="city" maxlength="100" value="<%= profile.city %>" required>
          <br>

          <label for="state">State</label>
          <select id="state" name="state">
            <% allStates.forEach(function(state) { %>
              <% const selected = state.state_code === profile.state ? 'selected' : ''; %>
              <option value="<%= state.state_code %>" <%= selected %>><%= state.state_name %></option>
            <% }); %>
          </select>
          <br>

          <label for="zipcode">Zip Code</label>
          <input type="number" id="zipcode" name="zipcode" min="100" max="999999" value="<%= profile.zipcode %>" required>
          <br>

          <br>
          <h2>Volunteer preferences</h2>
          <!-- Skills Selection -->
          <label for="skillSelect">Skills</label>
          <select id="skillSelect" name="skillSelect">
            <% allSkills.forEach(function(skill) { %>
              <option value="<%= skill.skill_id %>"><%= skill.skill_name %></option>
            <% }); %>
          </select>
          <button type="button" id="addSkill" onclick="userprefsAddSkill()">Add Skill</button>
          <br>

          <!-- Selected Skills Table -->
          <table id="selectedSkillTable" class="multiselect">
            <tr>
              <th>Skill</th>
              <th>Actions</th>
            </tr>
            <% userSkills.forEach(function(skill) { %>
              <tr id="skill-<%= skill.skill_id %>">
                <td><%= skill.skill_name %></td>
                <td>
                  <button 
                    type="button" 
                    class="btn remove-btn cancel" 
                    onclick="userprefsRemoveSkill('<%= skill.skill_id %>')"
                    aria-label="Remove skill <%= skill.skill_name %>"
                  >
                    Remove
                  </button>
                </td>
              </tr>
            <% }); %>
          </table>

          <!-- Preferences Textarea -->
          <label for="preferences">Preferences</label>
          <textarea id="preferences" name="preferences" maxlength="500"><%= profile.preferences %></textarea>
          <br>

          <!-- Availability Selection -->
          <label for="dateSelect">Availability</label>
          <input type="date" id="dateSelect" name="dateSelect" min="<%= new Date().toISOString().split('T')[0] %>">
          <button type="button" id="addAvailability" onclick="userprefsAddAvailability()">Add Date</button>

          <!-- Selected Availability Table -->
          <table id="selectedAvailabilityTable" class="multiselect">
            <tr>
              <th>Date</th>
              <th>Actions</th>
            </tr>
            <% userAvailability.forEach(function(availability) { %>
              <% const date = new Date(availability.available_at * 1000); %>
              <% const dateStr = date.toISOString().split('T')[0]; %>
              <tr id="availability-<%= dateStr %>">
                <td><%= dateStr %></td>
                <td>
                  <button 
                    type="button" 
                    class="btn remove-btn cancel" 
                    onclick="userprefsRemoveAvailability('<%= dateStr %>')"
                    aria-label="Remove availability on <%= dateStr %>"
                  >
                    Remove
                  </button>
                </td>
              </tr>
            <% }); %>
          </table>

          <!-- Submit Button -->
          <input type="submit" value="Update information">
        </form>
      </div>
    </article>
  </div>

  <!-- JavaScript to handle form data before submission -->
  <script>
    document.querySelector("form").addEventListener('submit', (e) => {
      // e.preventDefault(); // Uncomment if you want to prevent the form from submitting

      const skillIds = Array.from(document.querySelectorAll('#selectedSkillTable tr[id^="skill-"]'))
        .map(row => row.id.replace('skill-', ''));
      const availabilityDates = Array.from(document.querySelectorAll('#selectedAvailabilityTable tr[id^="availability-"]'))
        .map(row => row.id.replace('availability-', ''));

      // Create hidden inputs to include skills and availability in the form data
      const skillsInput = document.createElement('input');
      skillsInput.type = 'hidden';
      skillsInput.name = 'skills';
      skillsInput.value = skillIds.join(',');

      const availabilityInput = document.createElement('input');
      availabilityInput.type = 'hidden';
      availabilityInput.name = 'availability';
      availabilityInput.value = availabilityDates.join(',');

      e.target.appendChild(skillsInput);
      e.target.appendChild(availabilityInput);
    });
  </script>
</body>
</html>
